{
  "name": "expo-nextjs-turborepo",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Adam Brodin",
    "email": "adambrodindeveloper@gmail.com"
  },
  "repository": {
    "url": "https://github.com/adambrodin/expo-nextjs-turborepo",
    "type": "git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "clear && turbo run dev --parallel",
    "dev:android": "clear && turbo run dev:android --parallel",
    "build": "turbo run build --parallel",
    "rebuild": "rimraf ./**/*/{node_modules,.expo,.next,.turbo,dist} && yarn install",
    "lint": "eslint ./**/*{.js,.ts,.tsx}",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.1",
    "prettier": "^2.5.1",
    "rimraf": "3.0.2",
    "turbo": "1.1.2",
    "typescript": "^4.5.5",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".dist/**",
          ".next/**"
        ]
      },
      "dev": {
        "cache": false
      },
      "dev:android": {
        "cache": false
      }
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": "prettier --write",
    "*.{js,ts,tsx}": "eslint . --fix"
  }
}
