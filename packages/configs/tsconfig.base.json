{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "packages/*": ["../*"] }
  },
  "exclude": ["node_modules", "dist"]
}
